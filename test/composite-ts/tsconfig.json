{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["*.mts"]
}
